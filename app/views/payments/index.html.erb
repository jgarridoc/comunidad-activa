<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Monto pago</th>
      <th>Saldo acumulado</th>
      <th>Fecha pago</th>
      <th>Total pago</th>
      <th>Payment method</th>
      <th>User</th>
      <th>Motive</th>
      <th>Month</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.monto_pago %></td>
        <td><%= payment.saldo_acumulado %></td>
        <td><%= payment.fecha_pago %></td>
        <td><%= payment.total_pago %></td>
        <td><%= payment.payment_method_id %></td>
        <td><%= payment.user_id %></td>
        <td><%= payment.motive_id %></td>
        <td><%= payment.month_id %></td>
        <td><%= payment.year_id %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payment', new_payment_path %>
